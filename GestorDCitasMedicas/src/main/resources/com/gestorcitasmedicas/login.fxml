<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestorcitasmedicas.controller.LoginController" prefHeight="422.0" prefWidth="759.0" minHeight="400" minWidth="600" style="-fx-background-color: #FFFFFF;">
   <center>
      <ImageView pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" fitWidth="400" fitHeight="400">
         <image>
            <Image url="@img/log.png" />
         </image>
      </ImageView>
   </center>
   <right>
      <VBox prefWidth="300" minWidth="250" maxWidth="400" style="-fx-background-color: #FFFFFF;" spacing="15" BorderPane.alignment="CENTER">
         <padding>
            <Insets top="30" right="30" bottom="30" left="30" />
         </padding>
         <children>
            <HBox alignment="CENTER">
               <ImageView fitHeight="49.0" fitWidth="68.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@img/cross.png" />
                  </image>
               </ImageView>
            </HBox>
            <Label text="Bienvenido" alignment="CENTER">
               <font>
                  <Font name="Calibri Bold" size="18.0" />
               </font>
            </Label>
            <VBox spacing="8">
               <Label text="Correo:" />
               <TextField fx:id="correoIngresar" promptText="Ingresa tu correo" style="-fx-background-color: #B9C3D5; -fx-background-radius: 5;" />
            </VBox>
            <VBox spacing="8">
               <Label text="Contraseña:" />
               <PasswordField fx:id="contraIngresar" promptText="Ingresa tu contraseña" style="-fx-background-color: #B9C3D5; -fx-background-radius: 5;" />
            </VBox>
            <Label fx:id="olvidoContra" style="-fx-text-fill: #3868fb; -fx-underline: true; -fx-cursor: hand;" text="¿Has olvidado tu contraseña?" alignment="CENTER">
               <font>
                  <Font name="Calibri Italic" size="10.0" />
               </font>
            </Label>
            <Button fx:id="loginButton" onAction="#iniciarSesion" mnemonicParsing="false" style="-fx-background-color: #3B6F89; -fx-background-radius: 5;" text="Iniciar Sesión" textFill="WHITE">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
            <HBox alignment="CENTER" spacing="5">
               <Label text="¿No tienes cuenta?" />
               <Label fx:id="crearCuenta" text="¡Crea una ahora!" style="-fx-text-fill: #3868fb; -fx-underline: true; -fx-cursor: hand;" />
            </HBox>
         </children>
      </VBox>
      </right>
  </BorderPane>
