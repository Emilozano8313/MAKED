<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600" minWidth="800" prefHeight="768.0" prefWidth="1366.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestorcitasmedicas.controller.RecuperarContraController">
   <children>
      <!-- Lado izquierdo - Imagen de consulta médica -->
      <VBox prefWidth="400" minWidth="300" maxWidth="500" style="-fx-background-color: #E7ECF0;" alignment="CENTER">
         <children>
            <ImageView fitHeight="400" fitWidth="500" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img/docBack.png" />
               </image>
            </ImageView>
         </children>
      </VBox>
      
      <!-- Lado derecho - Formulario de recuperación -->
      <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: #FFFFFF;" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER" HBox.hgrow="ALWAYS">
         <VBox spacing="30" alignment="CENTER" style="-fx-background-color: #FFFFFF;" minWidth="500">
            <padding>
               <Insets top="40" right="60" bottom="40" left="60" />
            </padding>
         <children>
            <!-- Botón de regreso -->
            <HBox alignment="CENTER_LEFT" spacing="10">
               <Button fx:id="btnRegresar" text="← Regresar" 
                       style="-fx-background-color: #3B6F89; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-background-radius: 5; -fx-padding: 8 15;" 
                       onAction="#regresarALogin" />
            </HBox>
            
            <!-- Icono de medicina -->
            <HBox alignment="CENTER">
               <ImageView fitHeight="60" fitWidth="60" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@img/cross.png" />
                  </image>
               </ImageView>
            </HBox>
            
            <!-- Título -->
            <VBox alignment="CENTER" spacing="10">
               <Label text="Recupera tu cuenta" style="-fx-font-weight: bold; -fx-font-size: 28; -fx-text-fill: #3B6F89;" />
            </VBox>
            
            <!-- Formulario -->
            <VBox spacing="20" alignment="CENTER">
               <!-- Campo CURP -->
               <VBox spacing="8" alignment="CENTER_LEFT">
                  <Label text="CURP" style="-fx-font-weight: bold; -fx-font-size: 14; -fx-text-fill: #3B6F89;" />
                  <TextField fx:id="txtCurp" promptText="Ingresa tu CURP" prefWidth="400" prefHeight="45" 
                            style="-fx-background-color: #F5F5F5; -fx-background-radius: 5; -fx-border-radius: 5; -fx-font-size: 14;" />
               </VBox>
               
               <!-- Campo Contraseña -->
               <VBox spacing="8" alignment="CENTER_LEFT">
                  <Label text="Contraseña" style="-fx-font-weight: bold; -fx-font-size: 14; -fx-text-fill: #3B6F89;" />
                  <PasswordField fx:id="txtContrasena" promptText="Ingresa tu contraseña" prefWidth="400" prefHeight="45" 
                                style="-fx-background-color: #F5F5F5; -fx-background-radius: 5; -fx-border-radius: 5; -fx-font-size: 14;" />
               </VBox>
               
               <!-- Campo Confirmar Contraseña -->
               <VBox spacing="8" alignment="CENTER_LEFT">
                  <Label text="Confirmar contraseña" style="-fx-font-weight: bold; -fx-font-size: 14; -fx-text-fill: #3B6F89;" />
                  <PasswordField fx:id="txtConfirmarContrasena" promptText="Ingresa nuevamente tu contraseña" prefWidth="400" prefHeight="45" 
                                style="-fx-background-color: #F5F5F5; -fx-background-radius: 5; -fx-border-radius: 5; -fx-font-size: 14;" />
               </VBox>
               
               <!-- Botón Listo -->
               <Button fx:id="btnListo" text="Listo" prefWidth="400" prefHeight="50" 
                       style="-fx-background-color: #3B6F89; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-background-radius: 5;" 
                       onAction="#actualizarContrasena" />
            </VBox>
            
            <!-- Enlaces inferiores -->
            <VBox spacing="10" alignment="CENTER">
               <Label text="¿No tienes cuenta?" style="-fx-font-size: 14; -fx-text-fill: #666666;" />
               <Label fx:id="lblCrearCuenta" text="¡Crea uno ahora!" style="-fx-font-size: 14; -fx-text-fill: #3B6F89; -fx-font-weight: bold;" 
                      onMouseClicked="#crearCuenta" />
               
               <!-- Botón adicional de regreso -->
               <Button fx:id="btnRegresarInferior" text="Volver al Inicio de Sesión" 
                       style="-fx-background-color: #6C757D; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-background-radius: 5; -fx-padding: 10 20;" 
                       onAction="#regresarALogin" />
            </VBox>
         </children>
         </VBox>
      </ScrollPane>
   </children>
</HBox>
