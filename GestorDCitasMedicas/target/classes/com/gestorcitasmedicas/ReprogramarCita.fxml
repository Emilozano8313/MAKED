<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600" minWidth="1000" prefHeight="768.0" prefWidth="1366.0" style="-fx-background-color: #F5F7FA;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestorcitasmedicas.controller.ReprogramarCitaController">
   <top>
      <HBox prefHeight="107.0" style="-fx-background-color: #FFFFFF; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" alignment="CENTER_LEFT" spacing="20">
         <padding>
            <Insets top="20" right="20" bottom="20" left="20" />
         </padding>
         <children>
            <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img/cross.png" />
               </image>
            </ImageView>
            <Label text="Reprogramar Cita Médica" textFill="#3B6F89">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <VBox spacing="20" style="-fx-background-color: #FFFFFF;">
         <padding>
            <Insets top="20" right="20" bottom="20" left="20" />
         </padding>
         <children>
            <!-- Título de la sección -->
            <HBox spacing="15" alignment="CENTER_LEFT">
               <ImageView fitHeight="40" fitWidth="40" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@img/icon5.png" />
                  </image>
               </ImageView>
               <Label text="Mis Citas Activas" style="-fx-font-weight: bold; -fx-font-size: 28; -fx-text-fill: #3B6F89;" />
            </HBox>
            
            <!-- Tabla de citas activas -->
            <VBox spacing="10" style="-fx-background-color: #F8F9FA; -fx-background-radius: 10; -fx-padding: 20;">
               <children>
                  <Label text="Selecciona la cita que deseas reprogramar:" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #3B6F89;" />
                  
                  <TableView fx:id="tablaCitas" prefHeight="250" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="50" />
                        <TableColumn fx:id="colDoctor" text="Doctor" prefWidth="200" />
                        <TableColumn fx:id="colEspecialidad" text="Especialidad" prefWidth="150" />
                        <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120" />
                        <TableColumn fx:id="colHora" text="Hora" prefWidth="100" />
                        <TableColumn fx:id="colMotivo" text="Motivo" prefWidth="200" />
                        <TableColumn fx:id="colEstado" text="Estado" prefWidth="100" />
                     </columns>
                  </TableView>
                  
                  <!-- Información de la cita seleccionada -->
                  <VBox fx:id="infoCitaSeleccionada" spacing="10" style="-fx-background-color: #E7ECF0; -fx-background-radius: 8; -fx-padding: 15;" visible="false">
                     <children>
                        <Label text="Información de la Cita Actual" style="-fx-font-weight: bold; -fx-font-size: 18; -fx-text-fill: #3B6F89;" />
                        <GridPane hgap="20" vgap="8">
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="300" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10" prefHeight="25" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10" prefHeight="25" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10" prefHeight="25" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10" prefHeight="25" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10" prefHeight="25" vgrow="SOMETIMES" />
                           </rowConstraints>
                           
                           <Label text="Doctor:" style="-fx-font-weight: bold; -fx-font-size: 14;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                           <Label fx:id="lblDoctorSeleccionado" text="" style="-fx-font-size: 14;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                           
                           <Label text="Especialidad:" style="-fx-font-weight: bold; -fx-font-size: 14;" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                           <Label fx:id="lblEspecialidadSeleccionada" text="" style="-fx-font-size: 14;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                           
                           <Label text="Fecha Actual:" style="-fx-font-weight: bold; -fx-font-size: 14;" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                           <Label fx:id="lblFechaActual" text="" style="-fx-font-size: 14;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                           
                           <Label text="Hora Actual:" style="-fx-font-weight: bold; -fx-font-size: 14;" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                           <Label fx:id="lblHoraActual" text="" style="-fx-font-size: 14;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                           
                           <Label text="Consultorio:" style="-fx-font-weight: bold; -fx-font-size: 14;" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                           <Label fx:id="lblConsultorioSeleccionado" text="" style="-fx-font-size: 14;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        </GridPane>
                     </children>
                  </VBox>
                  
                  <!-- Formulario de reprogramación -->
                  <VBox fx:id="formularioReprogramacion" spacing="15" style="-fx-background-color: #E8F5E8; -fx-background-radius: 8; -fx-padding: 15;" visible="false">
                     <children>
                        <Label text="Nueva Fecha y Hora" style="-fx-font-weight: bold; -fx-font-size: 18; -fx-text-fill: #2E7D32;" />
                        
                        <HBox spacing="30" alignment="CENTER_LEFT">
                           <VBox spacing="8" prefWidth="300">
                              <Label text="Nueva Fecha:" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #3B6F89;" />
                              <DatePicker fx:id="datePickerNueva" promptText="Selecciona nueva fecha" prefWidth="280" />
                           </VBox>
                           
                           <VBox spacing="8" prefWidth="300">
                              <Label text="Nueva Hora:" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #3B6F89;" />
                              <ComboBox fx:id="comboHoraNueva" promptText="Selecciona nueva hora" prefWidth="280" disable="true" />
                           </VBox>
                        </HBox>
                        
                        <VBox spacing="8">
                           <Label text="Motivo de la reprogramación:" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #3B6F89;" />
                           <TextArea fx:id="txtMotivoReprogramacion" promptText="Describe el motivo de la reprogramación..." prefHeight="80" wrapText="true" />
                        </VBox>
                     </children>
                  </VBox>
                  
                  <!-- Botones de acción -->
                  <HBox spacing="20" alignment="CENTER_RIGHT">
                     <Button fx:id="btnRegresar" text="Regresar" style="-fx-background-color: #787A7D; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-background-radius: 5;" onAction="#regresar" />
                     <Button fx:id="btnReprogramarCita" text="Reprogramar Cita" style="-fx-background-color: #28A745; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-background-radius: 5;" onAction="#reprogramarCita" disable="true" />
                  </HBox>
               </children>
            </VBox>
            
            <!-- Información adicional -->
            <VBox spacing="10" style="-fx-background-color: #E8F4FD; -fx-background-radius: 8; -fx-padding: 20;">
               <children>
                  <Label text="Información importante:" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #2C5AA0;" />
                  <VBox spacing="5">
                     <Label text="• Solo puedes reprogramar citas que estén programadas para el futuro" style="-fx-font-size: 14; -fx-text-fill: #2C5AA0;" />
                     <Label text="• Se recomienda reprogramar con al menos 24 horas de anticipación" style="-fx-font-size: 14; -fx-text-fill: #2C5AA0;" />
                     <Label text="• La nueva fecha y hora deben estar disponibles para el doctor" style="-fx-font-size: 14; -fx-text-fill: #2C5AA0;" />
                     <Label text="• Una vez reprogramada, la fecha original se guardará en observaciones" style="-fx-font-size: 14; -fx-text-fill: #2C5AA0;" />
                  </VBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
