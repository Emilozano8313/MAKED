<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600" minWidth="1000" prefHeight="768.0" prefWidth="1366.0" style="-fx-background-color: #F5F7FA;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestorcitasmedicas.controller.AgendarCitaPacienteController">
   <top>
      <HBox prefHeight="107.0" style="-fx-background-color: #FFFFFF; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" alignment="CENTER_LEFT" spacing="20">
         <padding>
            <Insets top="20" right="20" bottom="20" left="20" />
         </padding>
         <children>
            <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img/cross.png" />
               </image>
            </ImageView>
            <Label text="Agendar Cita Médica" textFill="#3B6F89">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: #FFFFFF;" BorderPane.alignment="CENTER">
         <VBox spacing="30" style="-fx-background-color: #FFFFFF;">
            <padding>
               <Insets top="30" right="30" bottom="30" left="30" />
            </padding>
            <children>
               <!-- Título de la sección -->
               <HBox spacing="15" alignment="CENTER_LEFT">
                  <ImageView fitHeight="40" fitWidth="40" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@img/AgenCita.png" />
                     </image>
                  </ImageView>
                  <Label text="Selecciona tu cita médica" style="-fx-font-weight: bold; -fx-font-size: 28; -fx-text-fill: #3B6F89;" />
               </HBox>
               
               <!-- Formulario de agendado -->
               <VBox spacing="25" style="-fx-background-color: #F8F9FA; -fx-background-radius: 10; -fx-padding: 25;">
                  <children>
                     <!-- Primera fila: Selección de Doctor -->
                     <HBox spacing="30" alignment="CENTER_LEFT">
                        <VBox spacing="8" prefWidth="400">
                           <Label text="Doctor:" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #3B6F89;" />
                           <ComboBox fx:id="comboDoctor" promptText="Selecciona un doctor" prefWidth="380" />
                        </VBox>
                        
                        <VBox spacing="8" prefWidth="400">
                           <Label text="Especialidad:" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #3B6F89;" />
                           <Label fx:id="lblEspecialidad" text="Selecciona un doctor primero" style="-fx-font-size: 14; -fx-text-fill: #666;" />
                        </VBox>
                     </HBox>
                     
                     <!-- Segunda fila: Fecha y Hora -->
                     <HBox spacing="30" alignment="CENTER_LEFT">
                        <VBox spacing="8" prefWidth="400">
                           <Label text="Fecha:" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #3B6F89;" />
                           <DatePicker fx:id="datePicker" promptText="Selecciona una fecha" prefWidth="380" />
                        </VBox>
                        
                        <VBox spacing="8" prefWidth="400">
                           <Label text="Hora:" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #3B6F89;" />
                           <ComboBox fx:id="comboHora" promptText="Selecciona una hora" prefWidth="380" disable="true" />
                        </VBox>
                     </HBox>
                     
                     <!-- Tercera fila: Motivo de la consulta -->
                     <VBox spacing="8">
                        <Label text="Motivo de la consulta:" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #3B6F89;" />
                        <TextArea fx:id="txtMotivo" promptText="Describe brevemente el motivo de tu consulta..." prefHeight="100" wrapText="true" />
                     </VBox>
                     
                     <!-- Información del doctor seleccionado -->
                     <VBox fx:id="infoDoctor" spacing="10" style="-fx-background-color: #E7ECF0; -fx-background-radius: 8; -fx-padding: 15;" visible="false">
                        <children>
                           <Label text="Información del Doctor" style="-fx-font-weight: bold; -fx-font-size: 18; -fx-text-fill: #3B6F89;" />
                           <GridPane hgap="20" vgap="8">
                              <columnConstraints>
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="300" />
                              </columnConstraints>
                              <rowConstraints>
                                 <RowConstraints minHeight="10" prefHeight="25" vgrow="SOMETIMES" />
                                 <RowConstraints minHeight="10" prefHeight="25" vgrow="SOMETIMES" />
                                 <RowConstraints minHeight="10" prefHeight="25" vgrow="SOMETIMES" />
                              </rowConstraints>
                              
                              <Label text="Nombre:" style="-fx-font-weight: bold; -fx-font-size: 14;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                              <Label fx:id="lblNombreDoctor" text="" style="-fx-font-size: 14;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                              
                              <Label text="Especialidad:" style="-fx-font-weight: bold; -fx-font-size: 14;" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                              <Label fx:id="lblEspecialidadDoctor" text="" style="-fx-font-size: 14;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              
                              <Label text="Consultorio:" style="-fx-font-weight: bold; -fx-font-size: 14;" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                              <Label fx:id="lblConsultorio" text="" style="-fx-font-size: 14;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                           </GridPane>
                        </children>
                     </VBox>
                     
                     <!-- Botones de acción -->
                     <HBox spacing="20" alignment="CENTER_RIGHT">
                        <Button fx:id="btnLimpiar" text="Limpiar" style="-fx-background-color: #787A7D; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-background-radius: 5;" onAction="#limpiarFormulario" />
                        <Button fx:id="btnRegresar" text="Regresar" style="-fx-background-color: #787A7D; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-background-radius: 5;" onAction="#regresar" />
                        <Button fx:id="btnAgendar" text="Agendar Cita" style="-fx-background-color: #3B6F89; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-background-radius: 5;" onAction="#agendarCita" />
                     </HBox>
                  </children>
               </VBox>
               
               <!-- Información adicional -->
               <VBox spacing="10" style="-fx-background-color: #E8F4FD; -fx-background-radius: 8; -fx-padding: 20;">
                  <children>
                     <Label text="Información importante:" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #2C5AA0;" />
                     <VBox spacing="5">
                        <Label text="• Las citas se programan de lunes a viernes de 8:00 AM a 5:00 PM" style="-fx-font-size: 14; -fx-text-fill: #2C5AA0;" />
                        <Label text="• Cada consulta tiene una duración de 30 minutos" style="-fx-font-size: 14; -fx-text-fill: #2C5AA0;" />
                        <Label text="• Llega 10 minutos antes de tu cita programada" style="-fx-font-size: 14; -fx-text-fill: #2C5AA0;" />
                        <Label text="• Puedes cancelar o reprogramar tu cita hasta 24 horas antes" style="-fx-font-size: 14; -fx-text-fill: #2C5AA0;" />
                     </VBox>
                  </children>
               </VBox>
            </children>
         </VBox>
      </ScrollPane>
   </center>
</BorderPane>
