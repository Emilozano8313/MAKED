<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600" minWidth="1000" prefHeight="768.0" prefWidth="1366.0" style="-fx-background-color: #F5F7FA;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestorcitasmedicas.controller.AgendaCitasController">
   <top>
      <HBox prefHeight="107.0" style="-fx-background-color: #FFFFFF; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" alignment="CENTER_LEFT" spacing="20">
         <padding>
            <Insets top="20" right="20" bottom="20" left="20" />
         </padding>
         <children>
            <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img/icon2.png" />
               </image>
            </ImageView>
            <Label text="Mi Agenda de Citas" textFill="#3B6F89">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <VBox spacing="20" style="-fx-background-color: #FFFFFF;">
         <padding>
            <Insets top="20" right="20" bottom="20" left="20" />
         </padding>
         <children>
            <!-- Información del médico -->
            <VBox spacing="10" style="-fx-background-color: #E8F4FD; -fx-background-radius: 10; -fx-padding: 20;">
               <children>
                  <Label text="Información del Médico" style="-fx-font-weight: bold; -fx-font-size: 20; -fx-text-fill: #2C5AA0;" />
                  <GridPane hgap="30" vgap="10">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="200" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="300" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="200" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="300" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES" />
                     </rowConstraints>
                     
                     <Label text="Nombre:" style="-fx-font-weight: bold; -fx-font-size: 14;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                     <Label fx:id="lblNombreMedico" text="" style="-fx-font-size: 14;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                     
                     <Label text="Especialidad:" style="-fx-font-weight: bold; -fx-font-size: 14;" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                     <Label fx:id="lblEspecialidad" text="" style="-fx-font-size: 14;" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                     
                     <Label text="Consultorio:" style="-fx-font-weight: bold; -fx-font-size: 14;" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                     <Label fx:id="lblConsultorio" text="" style="-fx-font-size: 14;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                     
                     <Label text="Cédula:" style="-fx-font-weight: bold; -fx-font-size: 14;" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                     <Label fx:id="lblCedula" text="" style="-fx-font-size: 14;" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                  </GridPane>
               </children>
            </VBox>
            
            <!-- Filtros y controles -->
            <HBox spacing="20" alignment="CENTER_LEFT">
               <VBox spacing="8">
                  <Label text="Filtrar por fecha:" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #3B6F89;" />
                  <DatePicker fx:id="datePickerFiltro" promptText="Selecciona fecha" />
               </VBox>
               
               <VBox spacing="8">
                  <Label text="Filtrar por estado:" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #3B6F89;" />
                  <ComboBox fx:id="comboEstadoFiltro" promptText="Todos los estados" prefWidth="150" />
               </VBox>
               
               <VBox spacing="8">
                  <Label text="&nbsp;" style="-fx-font-size: 16;" />
                  <Button fx:id="btnLimpiarFiltros" text="Limpiar Filtros" style="-fx-background-color: #6C757D; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-background-radius: 5;" onAction="#limpiarFiltros" />
               </VBox>
               
               <Region HBox.hgrow="ALWAYS" />
               
                               <VBox spacing="8">
                   <Label text="&nbsp;" style="-fx-font-size: 16;" />
                   <Button fx:id="btnHistorialPaciente" text="Ver Historial" style="-fx-background-color: #17A2B8; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-background-radius: 5;" onAction="#verHistorialPaciente" />
                </VBox>
                
                <VBox spacing="8">
                   <Label text="&nbsp;" style="-fx-font-size: 16;" />
                   <Button fx:id="btnReportes" text="Reportes" style="-fx-background-color: #6F42C1; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-background-radius: 5;" onAction="#verReportes" />
                </VBox>
                
                <VBox spacing="8">
                   <Label text="&nbsp;" style="-fx-font-size: 16;" />
                   <Button fx:id="btnRegresar" text="Regresar" style="-fx-background-color: #787A7D; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-background-radius: 5;" onAction="#regresar" />
                </VBox>
            </HBox>
            
            <!-- Tabla de citas -->
            <VBox spacing="10" style="-fx-background-color: #F8F9FA; -fx-background-radius: 10; -fx-padding: 20;">
               <children>
                  <HBox spacing="15" alignment="CENTER_LEFT">
                     <Label text="Mis Citas" style="-fx-font-weight: bold; -fx-font-size: 20; -fx-text-fill: #3B6F89;" />
                     <Label fx:id="lblContadorCitas" text="" style="-fx-font-size: 16; -fx-text-fill: #6C757D;" />
                  </HBox>
                  
                  <TableView fx:id="tablaCitas" prefHeight="400" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="50" />
                        <TableColumn fx:id="colPaciente" text="Paciente" prefWidth="200" />
                        <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120" />
                        <TableColumn fx:id="colHora" text="Hora" prefWidth="100" />
                        <TableColumn fx:id="colMotivo" text="Motivo" prefWidth="250" />
                        <TableColumn fx:id="colEstado" text="Estado" prefWidth="100" />
                        <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="150" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
            
            <!-- Información de la cita seleccionada -->
            <VBox fx:id="infoCitaSeleccionada" spacing="10" style="-fx-background-color: #E7ECF0; -fx-background-radius: 8; -fx-padding: 15;" visible="false">
               <children>
                  <Label text="Detalles de la Cita Seleccionada" style="-fx-font-weight: bold; -fx-font-size: 18; -fx-text-fill: #3B6F89;" />
                  <GridPane hgap="20" vgap="8">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="300" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="300" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10" prefHeight="25" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10" prefHeight="25" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10" prefHeight="25" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10" prefHeight="25" vgrow="SOMETIMES" />
                     </rowConstraints>
                     
                     <Label text="Paciente:" style="-fx-font-weight: bold; -fx-font-size: 14;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                     <Label fx:id="lblPacienteSeleccionado" text="" style="-fx-font-size: 14;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                     
                     <Label text="Teléfono:" style="-fx-font-weight: bold; -fx-font-size: 14;" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                     <Label fx:id="lblTelefonoPaciente" text="" style="-fx-font-size: 14;" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                     
                     <Label text="Fecha y Hora:" style="-fx-font-weight: bold; -fx-font-size: 14;" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                     <Label fx:id="lblFechaHoraSeleccionada" text="" style="-fx-font-size: 14;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                     
                     <Label text="Matrícula:" style="-fx-font-weight: bold; -fx-font-size: 14;" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                     <Label fx:id="lblMatriculaPaciente" text="" style="-fx-font-size: 14;" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                     
                     <Label text="Motivo:" style="-fx-font-weight: bold; -fx-font-size: 14;" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                     <Label fx:id="lblMotivoSeleccionado" text="" style="-fx-font-size: 14;" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="3" />
                     
                     <Label text="Observaciones:" style="-fx-font-weight: bold; -fx-font-size: 14;" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                     <Label fx:id="lblObservacionesSeleccionadas" text="" style="-fx-font-size: 14;" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="3" />
                  </GridPane>
                  
                  <!-- Botones de acción para la cita -->
                  <HBox spacing="15" alignment="CENTER_RIGHT">
                     <Button fx:id="btnCompletarCita" text="Completar Cita" style="-fx-background-color: #28A745; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-background-radius: 5;" onAction="#completarCita" />
                     <Button fx:id="btnCancelarCita" text="Cancelar Cita" style="-fx-background-color: #DC3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-background-radius: 5;" onAction="#cancelarCita" />
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
