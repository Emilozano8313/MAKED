<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600" minWidth="1000" prefHeight="684.0" prefWidth="1287.0" style="-fx-background-color: #16191C;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestorcitasmedicas.controller.GestUsuariosController">
   <top>
      <VBox style="-fx-background-color: #8B4513;" BorderPane.alignment="CENTER">
         <children>
            <!-- Barra superior marrón -->
            <HBox alignment="CENTER_LEFT" prefHeight="30" style="-fx-background-color: #8B4513;">
               <padding>
                  <Insets left="15" />
               </padding>
               <Label style="-fx-text-fill: #D3D3D3; -fx-font-size: 12;" text="Panel de gestión de pacientes" />
            </HBox>
            
            <!-- Barra principal con logo y título -->
            <HBox alignment="CENTER_LEFT" prefHeight="77" style="-fx-background-color: #E7ECF0;">
               <padding>
                  <Insets left="15" right="15" />
               </padding>
               <children>
                  <!-- Logo médico -->
                  <ImageView fitHeight="60" fitWidth="60" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@img/cross.png" />
                     </image>
                  </ImageView>
                  
                  <!-- Espaciador -->
                  <Region HBox.hgrow="ALWAYS" />
                  <ImageView fitHeight="42.0" fitWidth="142.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@img/miPerfil.png" />
                     </image>
                     <HBox.margin>
                        <Insets right="80.0" />
                     </HBox.margin>
                  </ImageView>
                  
                  <!-- Título y icono de perfil -->
                  <HBox alignment="CENTER_RIGHT" spacing="10" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: #FFFFFF;" BorderPane.alignment="CENTER">
         <VBox spacing="20" style="-fx-background-color: #FFFFFF;">
            <padding>
               <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <children>
               <!-- Tabla -->
               <VBox spacing="10" VBox.vgrow="ALWAYS">
                  <TableView fx:id="tablaUsuarios" prefHeight="487.0" prefWidth="1264.0" style="-fx-background-color: #E7ECF0;" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colNombre" prefWidth="327.9999828338623" text="Nombre" />
                        <TableColumn fx:id="colCurp" prefWidth="255.3333740234375" text="CURP" />
                        <TableColumn fx:id="colEdad" prefWidth="94.99996948242188" text="Edad" />
                        <TableColumn fx:id="colPeso" prefWidth="97.33334350585938" text="Peso" />
                        <TableColumn fx:id="colAltura" prefWidth="70.33331298828125" text="Altura" />
                        <TableColumn fx:id="colGenero" prefWidth="73.0" text="Género" />
                        <TableColumn fx:id="colMatricula" prefWidth="161.66668701171875" text="Matrícula o N. de empleado" />
                        <TableColumn fx:id="colEstatus" prefWidth="92.0" text="Estado" />
                     </columns>
                  </TableView>
                  <Button fx:id="btnAgregar" style="-fx-background-color: #3B6F89; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;" text="Agregar" />

                  <!-- Botón Agregar -->
                  <HBox alignment="CENTER_RIGHT" />
               </VBox>

               <!-- Botón de regreso al final -->
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <Button onAction="#volverAlMenuPrincipal" prefHeight="40.0" prefWidth="168.0" style="-fx-background-color: #3B6F89; -fx-text-fill: white; -fx-font-weight: bold;" text="← Volver al Menú Principal" />
               </HBox>
            </children>
         </VBox>
      </ScrollPane>
   </center>
   <left>
      <VBox fx:id="menuLateral" maxWidth="200" minWidth="60" prefWidth="60" style="-fx-background-color: #3B6F89;" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="15" left="8" right="8" top="15" />
         </padding>
         <children>
            <!-- Gestion Usuarios -->
            <VBox fx:id="menuItemUsuarios" alignment="CENTER" spacing="3" style="-fx-background-color: #3B6F89; -fx-background-radius: 5;">
               <padding>
                  <Insets bottom="8" left="8" right="8" top="8" />
               </padding>
               <children>
                  <ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@img/iper.png" />
                     </image>
                  </ImageView>
                  <Label managed="false" style="-fx-text-fill: white; -fx-font-size: 11; -fx-font-weight: bold;" text="Gestion Usuarios" visible="false" />
               </children>
            </VBox>
            
            <!-- Gestion Medicos -->
            <VBox fx:id="menuItemMedicos" alignment="CENTER" spacing="3" style="-fx-background-color: #3B6F89; -fx-background-radius: 5;">
               <padding>
                  <Insets bottom="8" left="8" right="8" top="8" />
               </padding>
               <children>
                  <ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@img/imed.png" />
                     </image>
                  </ImageView>
                  <Label managed="false" style="-fx-text-fill: white; -fx-font-size: 11; -fx-font-weight: bold;" text="Gestion Medicos" visible="false" />
               </children>
            </VBox>
            
            <!-- Agendar Citas -->
            <VBox fx:id="menuItemCitas" alignment="CENTER" spacing="3" style="-fx-background-color: #3B6F89; -fx-background-radius: 5;">
               <padding>
                  <Insets bottom="8" left="8" right="8" top="8" />
               </padding>
               <children>
                  <ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@img/ical.png" />
                     </image>
                  </ImageView>
                  <Label managed="false" style="-fx-text-fill: white; -fx-font-size: 11; -fx-font-weight: bold;" text="Agendar Citas" visible="false" />
               </children>
            </VBox>
            
            <!-- Espaciador -->
            <Region VBox.vgrow="ALWAYS" />

            <!-- Cerrar Sesión -->
            <VBox fx:id="menuItemSalir" alignment="CENTER" spacing="3" style="-fx-background-color: #3B6F89; -fx-background-radius: 5;">
               <padding>
                  <Insets bottom="8" left="8" right="8" top="8" />
               </padding>
               <children>
                  <ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@img/iexit.png" />
                     </image>
                  </ImageView>
                  <Label managed="false" style="-fx-text-fill: white; -fx-font-size: 11; -fx-font-weight: bold;" text="Cerrar Sesión" visible="false" />
               </children>
            </VBox>
         </children>
      </VBox>
   </left>
</BorderPane>
